<div class="row">
  <div class="large-12 large-centered columns ">
    <h2><%= t('stories_page_headline') %></h2>
    <table class="responsive">
      <thead>
        <tr>
          <th width="300">Title</th>
          <th width="300">Category</th>
          <th width='500'>Image</th>
          <th width='100'>chapters</th>
          <th width='100'>turn</th>
          <th width='100'></th>
          <th width='100'></th>
        </tr>
      </thead>

      <tbody>
        <% @stories.each do |story| %>
          <tr>
            <td><h3><%= story.title %></h3></td>
            <td><h3><%= story.category.body %></h3></td>
            <td><img src="<%= story.picture_url %>" alt="Random picture"/></td>
            <td>
               <% if story.completed %>
                  <p class="label success">completed</p>
               <% elsif story.chapters.length == 0 %>
                  <p class="label alert"><%= story.chapters.length %></p>
               <% else %>
                  <p class="lead"><%= story.chapters.length %></p>
               <% end %>
            </td>
            <td>
               <% unless story.completed  %>
                  <%= get_user_turn( story.turn ) %>
               <% end %>
            </td>
            <td><%= link_to 'Show',
                    story,
                    class: "button small" %>
            </td>
            <td><%= link_to 'Delete', story,
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: "button small secondary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Story', new_story_path, class: "button secondary" %>
  </div>
</div>
