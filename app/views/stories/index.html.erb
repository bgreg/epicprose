<h1><%= current_user.email%>'s stories</h1>
<div class="row">
  <div class="large-12 large-centered columns ">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Image</th>
          <th>co-author</th>
          <th>chapters</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @stories.each do |story| %>
          <tr>
            <td><h3><%= story.title %></h3></td>
            <td><h3><%= story.category.body %></h3></td>
            <td><img src="<%= story.picture_url %>" alt="Random picture"/></td>
            <td><p class="lead"><%= get_co_author(story) %></p></td>
            <td><p class="lead"><%= story.chapters.length %></p></td>
            <td><p class="lead"><%= story.users.length %></p></td>
            <td><%= link_to 'Show',
                    story,
                    class: "button small" %>
            </td>
            <td><%= link_to 'Edit',
                    edit_story_path(story),
                    class: "button secondary small" %>
            </td>
            <td><%= link_to 'Destroy', story,
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: "button small alert" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Story', new_story_path, class: "button" %>
  </div>
</div>

