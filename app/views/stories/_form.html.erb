<%= form_for(@story) do |f| %>

  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize( @story.errors.count, "error" ) %> prohibited this story from being saved:</h2>
      <ul>
        <% @story.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="title"> Title
      <%= f.text_field :title, required: true, maxlength: 120 %>
    </label>
  </div>

  <div class="field">
    <label for="co_author">Co Author
      <%= email_field_tag :co_author, nil, required: true, maxlength: 120  %>
    </label>
  </div>

  <div class="actions">
    <%= f.submit class: "button disableHoverColor" %>
  </div>
<% end %>
