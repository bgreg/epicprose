<h2>Title: <%= @story.title %></h2>

<div>
  <strong>Randomly assigned image</strong>
  <td><img src="<%= @story.picture_url %>" alt="" /></td>
</div>

<h3>Category: <%= @story.category.body %></h3>
<p><strong>Co Author:</strong> <%= get_co_author( @story.id )%></p>
  <% if !@story.completed  %>
    <p><strong>Turn:</strong> <%= get_user_turn( @story.turn ) %></p>
  <% else %>
    <span class="label success">completed</span>
  <% end %>
<hr />
<h3>Chapters</h3>
<table>
  <thead>
    <tr>
      <th>user</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @story.chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.user.email %></td>
        <td><%= chapter.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if !@story.completed && ( @story.turn == current_user.id ) || @story.turn.nil? %>
  <%= link_to 'New Chapter', new_story_chapter_path(@story.id), class: "button" %> 
<% end %>
<%= link_to 'Back to Story List', stories_path , class: "button secondary"%>
